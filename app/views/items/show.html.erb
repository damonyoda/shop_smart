<h1>Item details</h1>
<div class="panel-body">
<table id= "items" width="100%" class="table table-striped table-bordered table-hover">

<p>Item name: <%= @item.item_name %></p>


<%= image_tag @item.picture.url if @item.picture? %>

<div class="panel-body">
<table id= "items" width="100%" class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
        <th>Item information</th>
        <th>Mall</th>
        <th>Available in</th>
        <th>Price</th>
        </tr>
    </thead>
    <tbody>

<% @item_list_comparison.each do |item_name, item| %>
<% item.each do |i| if item_name == @item.item_name %>
<tr>
<td><%= i.item_info %></td>
<td><%= i.mall_name %></td>
<td><%= i.available_in %></td>
<td><%= i.item_price %></td>
<td>
<% if current_user.admin? %>
  | <%= link_to "Delete", @item, method: :delete, data: {confirm: "Are you sure?"} %>
</td>
<% end %>
<% end %>
<% end %>
</tr>
<% end %>
</tbody>
    </table>
    </div>
    </div>

